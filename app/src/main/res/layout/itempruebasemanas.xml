<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="180dp"
    android:elevation="4dp"
android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingTop="15dp"
        android:background="@color/gray1"
        android:elevation="4dp"

        android:id="@+id/relativeLayout">

        <TextView
            android:id="@+id/tv_semana1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/tv_semana1Date1"
            android:text="SEMANA 1 "
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_semana1Date1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/tv_semana1"
            android:text="Vence 15 de Enero"
            android:textColor="@color/gray"
          android:paddingLeft="45dp"
            android:paddingTop="3dp"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/imgsem1download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="19dp"
            android:src="@drawable/ic_download" />
        <ImageView
            android:id="@+id/img_imgsem1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="59dp"
            android:src="@drawable/ic_circlegray" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout"
        android:background="@color/white"
        android:elevation="4dp"

        android:paddingTop="15dp">

        <TextView

            android:id="@+id/descsem1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="35dp"
            android:text="Tomando la Decision"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/img_imgsem1Next1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="22dp"
            android:src="@drawable/ic_next" />

    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="9dp"
        android:background="@color/line_gray"/>
</LinearLayout>