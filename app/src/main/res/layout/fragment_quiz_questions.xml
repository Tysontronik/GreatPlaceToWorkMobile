<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:elevation="4dp"
        android:background="@color/gray1"
        android:paddingTop="@dimen/activity_horizontal_margins"
        android:id="@+id/relativeLayout2">
        <ImageView
            android:id="@+id/img_backFq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:clickable="true"
            android:src="@drawable/ic_back"/>

        <TextView
            android:id="@+id/actionbarid"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="25dp"
            android:layout_toEndOf="@+id/img_back"
            android:elevation="4dp"
            android:padding="4dp"
            android:text="PREGUNTA"
            android:textAlignment="center"
            android:textColor="@color/gray"
            android:textSize="20dp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_alignBaseline="@+id/actionbarid"
            android:layout_alignBottom="@+id/actionbarid"
            android:layout_toEndOf="@+id/actionbarid"
            android:text="1"
            android:textColor="@color/gray"
            android:textSize="20dp"
            android:id="@+id/tv_preg_num" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_alignBaseline="@+id/tv_preg_num"
            android:layout_alignBottom="@+id/tv_preg_num"
            android:layout_toEndOf="@+id/tv_preg_num"
            android:text="/"
            android:textColor="@color/gray"
            android:textSize="20dp"
            android:id="@+id/line"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_alignBaseline="@+id/line"
            android:layout_alignBottom="@+id/line"
            android:layout_toEndOf="@+id/line"
            android:text="#"
            android:textColor="@color/gray"
            android:textSize="20dp"
            android:id="@+id/tv_munpreg1" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:elevation="4dp"
        android:background="@color/gray1"
        android:paddingTop="@dimen/activity_horizontal_margins">
    <TextView
        android:id="@+id/tv_textInicios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:elevation="4dp"
        android:textSize="30dp"
        android:textStyle="bold"
        android:scrollbars="vertical"
        android:text="Cuestion one" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:elevation="4dp"
        android:background="@color/gray1"
>

    <!--    <ListView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/ListView_listadoQuizPr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></ListView>-->
        <RadioGroup
            android:id="@+id/radiogroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CheckBoxTheme"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:background="@color/white"
            android:orientation="vertical"
            >
        </RadioGroup>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="@dimen/paddingTopTable"

        android:background="@color/gray1"
        android:layout_gravity="bottom"

        android:elevation="4dp">

        <ImageView
            android:id="@+id/img_backQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:clickable="true"
            android:visibility="gone"
            android:src="@drawable/ic_back" />

        <TextView

            android:id="@+id/tv_nextsig"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="21dp"
            android:layout_toStartOf="@+id/img_NextQuestions"
            android:elevation="4dp"
            android:padding="4dp"
            android:clickable="true"
            android:text="SIGUIENTE"
            android:textAlignment="center"
            android:textColor="@color/gray"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_NextQuestions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="left"
            android:longClickable="true"
            android:contextClickable="true"
            android:layout_marginEnd="22dp"
            android:clickable="true"
            android:src="@drawable/ic_next" />

    </RelativeLayout>


</LinearLayout>
