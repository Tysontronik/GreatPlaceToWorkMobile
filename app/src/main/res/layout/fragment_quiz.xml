<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.learning.gptw.greatplacetowork_learning.Quiz.QuizFragment.QuizFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:elevation="4dp"
        android:background="@color/gray1"
        android:paddingTop="@dimen/activity_horizontal_margins"
        android:id="@+id/relativeLayout2">
        <ImageView
            android:id="@+id/img_backQuiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:clickable="true"
            android:src="@drawable/ic_back"/>

        <TextView
            android:id="@+id/actionbarid"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_gravity="center_vertical"
            android:text="EVALUACION"
            android:textAlignment="center"
            android:textStyle="bold"
            android:padding="4dp"
            android:elevation="4dp"
            android:textColor="@color/gray"
            android:textSize="20dp" />


    </RelativeLayout>



    <TextView
        android:id="@+id/tv_textInicios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/relativeLayout2"
        android:elevation="4dp"
        android:textSize="30dp"
        android:textStyle="bold"
        android:scrollbars="vertical"
        android:text="Cuestion one" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_textInicios"
        android:layout_marginTop="75dp"
        android:text="number questions"
        android:id="@+id/tv_num_preg" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="11dp"
        android:textSize="20dp"
        android:text="resume questions"
        android:id="@+id/textView3" />


    <Button
        android:id="@+id/btn_iniciarQuestions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="97dp"
        android:background="@color/DodgerBlue"
        android:textColor="@color/white"
        android:text="INICIAR" />
</LinearLayout>
