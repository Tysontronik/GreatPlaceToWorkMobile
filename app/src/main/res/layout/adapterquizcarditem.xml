<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardUseCompatPadding="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:elevation="4dp"
            android:background="@color/GreenYellow"
            android:paddingTop="@dimen/activity_horizontal_margins"
            android:id="@+id/relativeLayout2">
            <ImageView
                android:id="@+id/img_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:clickable="true"
                android:src="@drawable/ic_back"/>

            <TextView
                android:id="@+id/actionbarid"
                android:layout_width="wrap_content"
                android:layout_height="39dp"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="25dp"
                android:layout_toEndOf="@+id/img_back"
                android:elevation="4dp"
                android:padding="4dp"
                android:text="PREGUNTA"
                android:textAlignment="center"
                android:textColor="@color/gray"
                android:textSize="20dp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="39dp"
                android:layout_alignBaseline="@+id/actionbarid"
                android:layout_alignBottom="@+id/actionbarid"
                android:layout_toEndOf="@+id/actionbarid"
                android:text="#"
                android:textColor="@color/gray"
                android:textSize="20dp"
                android:id="@+id/textView5" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="39dp"
                android:layout_alignBaseline="@+id/textView5"
                android:layout_alignBottom="@+id/textView5"
                android:layout_toEndOf="@+id/textView5"
                android:text="/"
                android:textColor="@color/gray"
                android:textSize="20dp"
                android:id="@+id/line"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="39dp"
                android:layout_alignBaseline="@+id/line"
                android:layout_alignBottom="@+id/line"
                android:layout_toEndOf="@+id/line"
                android:text="#"
                android:textColor="@color/gray"
                android:textSize="20dp"
                android:id="@+id/textView6" />
        </RelativeLayout>



        <TextView
            android:id="@+id/tv_textInicios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/relativeLayout2"
            android:elevation="4dp"
            android:textSize="30dp"
            android:textStyle="bold"
            android:scrollbars="vertical"
            android:text="Cuestion one" />


        <ListView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/ListView_listadoQuiz"
            android:layout_width="match_parent"
            android:layout_height="425dp"></ListView>



    </LinearLayout>


</android.support.v7.widget.CardView>
