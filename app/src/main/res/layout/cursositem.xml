<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    >

    <ImageView
        android:id="@+id/id_imgvideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_gravity="center"
        android:src="@drawable/ic_video" />
    <ImageView
        android:id="@+id/id_imgvideo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:visibility="gone"
        android:layout_gravity="center"
        android:src="@drawable/ic_question_answer_black_24dp" />
    <ImageView
        android:id="@+id/id_imgvideo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:visibility="gone"
        android:layout_gravity="center"
        android:src="@drawable/ic_local_activity_black_24dp" />
    <ImageView
        android:id="@+id/id_imgvideo3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:visibility="gone"
        android:layout_gravity="center"
        android:src="@drawable/ic_clear_all_black_24dp" />
    <ImageView
        android:id="@+id/id_imgvideo4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:visibility="gone"
        android:layout_gravity="center"
        android:src="@drawable/ic_home" />
    <ImageView
        android:id="@+id/id_imgvideo5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:visibility="gone"
        android:layout_gravity="center"
        android:src="@drawable/ic_email_black_24dp" />
    <ImageView
        android:id="@+id/id_imgvideo6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:visibility="gone"
        android:layout_gravity="center"
        android:src="@drawable/ic_group_black_24dp" />

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_toEndOf="@+id/id_imgvideo">

        <TextView
            android:id="@+id/tv_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@string/video"
            android:textColor="@color/gray"
            android:textSize="15dp" />



    <!--    <TextView
            android:id="@+id/tv_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/tv_video"
          android:layout_alignParentStart="true"
            android:layout_marginTop="35dp"
            android:text="mins"
            android:textSize="15dp" />-->


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

    </RelativeLayout>

    <ImageView
        android:id="@+id/id_imgdownloadvideo"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="18dp"
        android:src="@drawable/ic_download" />


</LinearLayout>